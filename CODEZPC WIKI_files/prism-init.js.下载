document.addEventListener("DOMContentLoaded",function(){if(typeof Prism!=="undefined"){Prism.highlightAll();const observer=new MutationObserver(function(mutations){mutations.forEach(function(mutation){if(mutation.addedNodes&&mutation.addedNodes.length>0){let hasCodeBlocks=false;mutation.addedNodes.forEach(function(node){if(node.nodeType===1){if(node.tagName==="PRE"||node.querySelector("pre")){hasCodeBlocks=true}}});if(hasCodeBlocks){Prism.highlightAll()}}})});observer.observe(document.body,{childList:true,subtree:true})}});